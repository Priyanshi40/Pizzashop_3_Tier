@* @model PizzaShop.ViewModels.ResetPasswordViewModel *@
@model PizzaShop.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout1";
}

<div class="row vh-100 vw-100 align-items-center justify-content-center">

    <div class="col-md-6">
        <div class="overflow-hidden ">
            <img src="~/images/dominos_background.jpg" class="img-fluid vh-100 p-0" alt="...">
        </div>
    </div>

    <div class="col-md-6 align-items-center justify-content-center">

        @if (TempData["Message"] != null)
        {
            <div class="row alert alert-info w-75 fs-6">
                @TempData["Message"]
            </div>
        }

        <div class="row align-items-center mt-sm-5">
            <div class="col text-end">
                <img src="~/images/logos/pizzashop_logo.png" class=" img-fluid h-25 w-25 " alt="...">
            </div>
            <h2 class="col text-primary">PIZZASHOP</h2>
        </div>

        <div class="row justify-content-center align-items-center d-flex ps-4">

            <div class="row mt-3 ps-2 w-75">
                <h5>Reset Your password</h5>
            </div>

            <form action="ResetPassword" class="w-75" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="position-relative m-1 " id="emailDiv" hidden>
                    <input id="email" asp-for="Email" class="fs-6 form-control  form-control-lg" type="text"
                        placeholder="Email" aria-label="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <span class="position-absolute emailInput"><i class="fa-solid fa-user "></i></span>
                </div>

                <div class="position-relative m-1" id="passwordDiv">
                    <input asp-for="NewPassword" class="fs-6 form-control form-control-lg" type="password" id="password"
                        placeholder="New Password*" aria-label="Password">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <span class="position-absolute emailInput"><i id="passwordIcon"
                            class="fa-regular fa-eye-slash"></i></span>
                </div>

                <div class="position-relative m-1" id="passwordDiv">
                    <input asp-for="ConfirmPassword" class="fs-6 form-control form-control-lg" type="password"
                        id="password" placeholder="Confirm New Password*" aria-label="Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <span class="position-absolute emailInput"><i id="passwordIcon"
                            class="fa-regular fa-eye-slash"></i></span>
                </div>
                <div class="row mt-3 m-1 ">
                    <input class="btn btn-primary" type="submit" value="Submit" id="btnSubmit">
                </div>
            </form>

            <div class="row mt-2 ps-2 w-50 ">
                <a asp-action="Index" class="d-flex col justify-content-center align-items-center"
                    style="text-decoration: none;">Back to Login</a>
            </div>
        </div>
    </div>
</div>

<script>
    const passIcon = document.querySelector('#passwordIcon');
    const pass = document.querySelector('#password');
    passIcon.addEventListener('click', function () {
        const type = pass.getAttribute('type') === 'password' ? 'text' : 'password';
        pass.setAttribute('type', type);
        this.classList.toggle('fa-eye');
    });
</script>